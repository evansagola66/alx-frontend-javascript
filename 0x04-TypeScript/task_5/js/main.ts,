// Define MajorCredits interface with brand
export interface MajorCredits {
  credits: number;
  _majorBrand: void; // brand to uniquely identify
}

// Define MinorCredits interface with brand
export interface MinorCredits {
  credits: number;
  _minorBrand: void; // brand to uniquely identify
}

// Function to sum MajorCredits
export function sumMajorCredits(
  subject1: MajorCredits,
  subject2: MajorCredits
): MajorCredits {
  return {
    credits: subject1.credits + subject2.credits,
    _majorBrand: undefined,
  };
}

// Function to sum MinorCredits
export function sumMinorCredits(
  subject1: MinorCredits,
  subject2: MinorCredits
): MinorCredits {
  return {
    credits: subject1.credits + subject2.credits,
    _minorBrand: undefined,
  };
}
